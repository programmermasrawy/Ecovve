<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:popupTheme">@style/PopupMenu</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="MyCustomTextAppearance" parent="CustomTabWidgetText">
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomTabWidgetText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/popup_card</item>
        <item name="android:background">@drawable/popup_card</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="AppTheme.NoActionBar.Home">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="InputCard">
        <item name="cardCornerRadius">12dp</item>
    </style>

    <style name="InputText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:padding">@dimen/_20sdp</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#CECECE</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>


    <style name="SpinnerText">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="horizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.25dp</item>
        <item name="android:background">#E1E1E1</item>
    </style>

    <style name="verticalDivider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">#E1E1E1</item>
    </style>

    <style name="LightDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#EDF2F5</item>
    </style>

    <style name="bigButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:elevation">3dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="fontFamily">@font/nunito_extrabold</item>

    </style>


    <style name="adButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:elevation">3dp</item>
        <item name="android:topLeftRadius">10dp</item>
        <item name="android:bottomLeftRadius">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_extrabold</item>
        <item name="fontFamily">@font/nunito_extrabold</item>

    </style>

    <style name="grayBoldPoppins">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/textDarkGray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="grayRegularPoppins">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/textDarkGray</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="grayRegularPoppinsSpinner">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/textDarkGray</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="smallSpan">
        <item name="android:textColor">@color/span</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">3dp</item>
    </style>

    <style name="textTitlePrimary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="socialTitle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="greenBigButton" parent="Widget.AppCompat.Button.Colored">
        <item name="cornerRadius">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tabTextFontAllCaps" parent="TextAppearance.MaterialComponents.Tab">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tabTextFont" parent="TextAppearance.MaterialComponents.Tab">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:titleMargin">@dimen/_15sdp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/nunito</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="halfDarkPoppins">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/textHalfDarkGray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="quantityChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="shopReviewChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#707070</item>
    </style>

    <style name="addItemCartChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textMoreDarkGray</item>
    </style>

    <style name="orderFromOthersChip" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#E6E6E6</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#CECECE</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="TransDialog" parent="AlertDialog.AppCompat">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <style name="DialogAnimation2">
        <item name="android:windowEnterAnimation">@anim/up_in</item>
        <item name="android:windowExitAnimation">@anim/down_out</item>
    </style>

</resources>
