<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:background="@color/textWhite">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSendLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:outlineSpotShadowColor="@android:color/transparent"
            android:shadowColor="@android:color/transparent"
            android:text="@{title}"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            app:chipBackgroundColor="#00ffffff"
            app:chipCornerRadius="@dimen/_20sdp"
            app:chipEndPadding="@dimen/_16sdp"
            app:chipIcon="@drawable/ic_chat_map_marker"
            app:chipMinHeight="42dp"
            app:chipStartPadding="@dimen/_16sdp"
            app:chipStrokeColor="@color/colorPrimary"
            app:chipStrokeWidth="1dp"
            app:fontFamily="@font/poppins"
            app:rippleColor="#00ffffff" />
    </LinearLayout>
</layout>
