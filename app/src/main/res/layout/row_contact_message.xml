<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imgContactImage"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:src="@drawable/profile_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="64dp" />

    <ImageView
        android:id="@+id/imgOnlineStatus"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="2dp"
        android:src="@drawable/ic_online"
        app:layout_constraintBottom_toBottomOf="@+id/imgContactImage"
        app:layout_constraintEnd_toEndOf="@+id/imgContactImage" />

    <TextView
        android:id="@+id/txtContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="Ahmad Salah"
        android:textColor="@color/textDarkGray"
        app:fontFamily="@font/nunito_semibold"
        app:layout_constraintStart_toEndOf="@+id/imgContactImage"
        app:layout_constraintTop_toTopOf="@+id/imgContactImage" />

    <TextView
        android:id="@+id/txtLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:text="Hi how are you"
        android:textColor="@color/textLightGray"
        android:textSize="13sp"
        app:fontFamily="@font/nunito"
        app:layout_constraintBottom_toBottomOf="@+id/imgContactImage"
        app:layout_constraintStart_toStartOf="@+id/txtContactName"
        app:layout_constraintTop_toBottomOf="@+id/txtContactName" />

    <TextView
        android:id="@+id/txtlastSeen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        android:text="1m"
        android:textColor="@color/textDarkGray"
        android:textSize="12sp"
        app:fontFamily="@font/nunito_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>